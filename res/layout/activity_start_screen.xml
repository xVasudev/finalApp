<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/splashImg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@anim/splashanim" />
    
    <RelativeLayout android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop ="125px"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    >

    
     
    <TextView
        android:id="@+id/logo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_marginLeft="5dp"
        android:text="" />

    <TextView
        android:id="@+id/logo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/logo1"
        android:layout_alignBottom="@+id/logo1"
        android:layout_toRightOf="@+id/logo1"
        android:text="" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/logoAnimation"
        android:layout_alignTop="@+id/cameraView"
        android:src="@drawable/browse" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cameraView"
        android:layout_alignTop="@+id/imageView3"
        android:src="@drawable/placeholder_image" />

    <ImageView
        android:id="@+id/cameraView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/logo1"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/cameraresized" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="100dp"
        android:src="@drawable/sample" />

    <ImageView
        android:id="@+id/logoAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logo2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="39dp"
        android:src="@anim/logoanimation"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/cameratext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cameraView"
        android:layout_alignRight="@+id/cameraView"
        android:layout_below="@+id/cameraView"
        android:layout_marginTop="8dp"
        android:text="  Camera"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
   
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="15dp"
        android:text="    Last Session"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignRight="@+id/imageView3"
        android:text="  Sample"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cameratext"
        android:layout_alignBottom="@+id/cameratext"
        android:layout_alignLeft="@+id/imageView2"
        android:text="  Browse"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />
   
</RelativeLayout>
</RelativeLayout>